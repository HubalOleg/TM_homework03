<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyTheme" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">#680000</item>
    </style>
    <style name="FieldTheme">
        <item name="android:layout_width">@dimen/field_width</item>
        <item name="android:layout_height">@dimen/field_height</item>
        <item name="android:layout_marginTop">@dimen/view_vertical_margin</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ButtonTheme" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginTop">@dimen/view_vertical_margin</item>
        <item name="android:background">#ffc400</item>
    </style>
    <style name="FieldThemeLand" parent="FieldTheme">
        <item name="android:layout_marginTop">@dimen/view_land_vertical_margin</item>
    </style>
    <style name="ButtonThemeLand" parent="ButtonTheme">
        <item name="android:layout_marginTop">@dimen/view_land_vertical_margin</item>
    </style>
</resources>
