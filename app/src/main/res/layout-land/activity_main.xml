<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="oleg.hubal.com.test.MainActivity">

    <TextView
        style="@style/MyTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_help"
        android:id="@+id/tv_help"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/field_textSize"
        />
    <EditText
        style="@style/FieldThemeLand"
        android:id="@+id/edt_value_a"
        android:layout_below="@+id/tv_help"
        />
    <Button
        style="@style/ButtonThemeLand"
        android:id="@+id/btn_sum"
        android:text="@string/btn_sum"
        android:layout_marginLeft="@dimen/view_horizontal_margin"
        android:layout_below="@+id/edt_value_a"/>
    <Button
        style="@style/ButtonThemeLand"
        android:id="@+id/btn_dif"
        android:layout_below="@id/edt_value_a"
        android:text="@string/btn_dif"
        android:layout_marginRight="@dimen/view_horizontal_margin"
        android:layout_alignParentRight="true"/>
    <EditText
        style="@style/FieldThemeLand"
        android:id="@+id/edt_value_b"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_help"/>
    <TextView
        style="@style/FieldThemeLand"
        android:textSize="20sp"
        android:id="@+id/tv_ans"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_sum"
        />

</RelativeLayout>